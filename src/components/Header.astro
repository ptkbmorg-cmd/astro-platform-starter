---
import Logo from '../components/Logo.astro';

const navItems = [
  { linkText: 'Home', href: '/' },
  { linkText: 'Layanan', href: '/#layanan' },
  { linkText: 'Proyek', href: '/#proyek' },
  { linkText: 'Kontak', href: '/#kontak' }
];
---

<nav class="flex flex-wrap items-center justify-between gap-4 pt-6 pb-10 sm:pt-10 sm:pb-16">
  <!-- Logo tidak dibungkus <a> di sini, karena Logo.astro sudah berupa link -->
  <div class="flex items-center">
    <Logo />
  </div>

  <ul class="flex flex-wrap items-center gap-x-2 gap-y-2">
    {navItems.map((item) => (
      <li>
        <a
          href={item.href}
          class="inline-block rounded-lg px-3 py-2 text-sm font-medium opacity-90 hover:opacity-100 hover:bg-white/10 transition"
        >
          {item.linkText}
        </a>
      </li>
    ))}
  </ul>
</nav>
